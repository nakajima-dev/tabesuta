<% if current_user.fav_shop?(hot_id) %>
  <%= form_with(model: current_user.shops.find_by(number: hot_id), remote: true, method: :delete) do |f| %>
    <%= hidden_field_tag :number, hot_id %>
    <%= f.submit 'Unlike '+Shop.where(number: hot_id).count.to_s , class: 'btn btn-warning' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.shops.build, remote: true, method: :post) do |f| %>
    <%= hidden_field_tag :number, hot_id %>
    <%= f.submit 'Like '+Shop.where(number: hot_id).count.to_s, class: 'btn btn-primary' %>
  <% end %>
<% end %>