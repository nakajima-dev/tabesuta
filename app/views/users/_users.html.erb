<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media d-flex my-2 p-2 row border rounded">
        <div class="text-center">
          <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 70 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <div>
              <%= user.name %>
            </div>
            <div>
              <p><%= link_to 'プロフィール', user_path(user) %></p>
            </div>
          </div>
        </div>
        <div class="">
          <%= render 'relationships/follow_button', user: user %>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="d-sm-none">
    <%= paginate users,  window: 1%>
  </div>
  <div class="d-none d-sm-block">
    <%= paginate users%>
  </div>
<% end %>